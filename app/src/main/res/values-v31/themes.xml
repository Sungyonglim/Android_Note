<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AndroidNotes" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">
            @color/purple_500
        </item>
        <item name="colorPrimaryVariant">
            @color/single_bg
        </item>
        <item name="colorOnPrimary">@color/white
        </item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">
            @color/teal_200
        </item>
        <item name="colorSecondaryVariant">
            @color/teal_700
        </item>
        <item name="colorOnSecondary">
            @color/black
        </item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">
            ?attr/colorPrimaryVariant
        </item>

        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_anim</item>
        <item name="android:windowSplashScreenAnimationDuration">3000</item>

        <!-- 상태바 삭제
        <item name="android:windowFullscreen">true</item>
        -->
    </style>
</resources>